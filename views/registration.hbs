<div class="container login-container" id='register'>
    <div class="card-1" >
        <div class="card-content" style="color: white;">
            <h3>Registration</h3>
            <form action="/register" method="POST"  style="font-size: 18px;padding:2px;">
                <div class="form-group">
                    <label for="fullname" style="color: white;">Full Name </label>
                    <p>{{NameError}}</p>
                    <input type="text" class="form-control" name="fullname" aria-describedby="name" style="color: white;text-align:center;">
                </div>
                <div class="form-group" style="color: white;">
                    <label for="exampleInputEmail1" style="color: white;">Email address</label>
                    <input type="email" class="form-control" name="email" aria-describedby="emailHelp" style="color: white;text-align:center;">
                </div>
                <div class="form-group" >
                    <label for="password1" style="color: white;">Enter Password</label>
                    <input type="password" class="form-control" name="password1" style="color: white;text-align:center;">
                </div>
               
                <div class="form-group">
                    <label for="password2" style="color: white;">Re-Enter Password</label>
                    <input type="password" class="form-control" name="password2" style="color: white;text-align:center;">
                </div>
                <div class="form-group" style="color: white;">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>