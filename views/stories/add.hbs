<h3>Add Story</h3>
<div class="row">
    <form action="/stories" method="post" class="col s12">
        <div class="row">
            <div class="input-field">
                <input type="text" id='title' name='title' style="color:white;">
                <label for="title" style="color: white;">Title</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <select id="status" name='status'>
                    <option value="public" selected >Public</option>
                    <option value="private" >Private</option>
                </select>
                <label for="status"  style="color: white;font-size:15px;">Status</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <h5>Tell Us Your Story:</h5>
                <textarea id="body" name="body"></textarea>
            </div>
        </div>
        <div class="row">
            <input type="submit" value="Save" class="btn" style=" border-radius: 25px ;padding-left:30px;padding-right:30px;margin-right:20px;">
            <a href="/Dashboard" class="btn red" style=" border-radius: 25px ;padding-left:25px;padding-right:25px;">Cancel</a>
        </div>
    </form>
</div>