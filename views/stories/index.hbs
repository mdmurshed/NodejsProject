<h1>Stories</h1>
<div class="row" style="color: black; box-shadow: 0 6px 10px 0 rgba(0, 0, 0, 0.40), 0 6px 20px 0 rgba(0, 0, 0, 0.45);height:700px;overflow:auto;padding:20px;">
    {{#each stories}}
    <div class="col s12 m4">
        <div class="card">
            <div class="card-image">
                {{!-- todo:editIcon --}}
                {{{editIcon user ../user _id}}}
            </div>

            <div class="card-content center-align" style="height: 310px;">
                <h5>{{title}}</h5>
                <p>{{ truncate (stripTags body) 150}}</p>
                <br>
                <div class="chip">
                    <img src="{{user.image}}" alt="">
                    <a href="/stories/user/{{user._id}}">{{user.displayName}}</a>
                </div>
            </div>
            <div class="card-action center-align">
                <a href="/stories/{{_id}}" class='btn grey'>Read More</a>
            </div>
        </div>
    </div>
    {{else}}
    <p>No Stories to display</p>
    {{/each}}
</div>